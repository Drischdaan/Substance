root = true

[*]
charset = utf-8
max_line_length = 170
trim_trailing_whitespace = false
insert_final_newline = true

# LUA files
[*.lua]
indent_style = tab
indent_size = 2

# Python files
[*.py]
indent_style = tab
indent_size = 2

# YAML files
[*.yaml]
indent_style = space
indent_size = 2

# C++ files
[*.{cpp,h,cc,hpp}]
indent_style = tab
indent_size = 4
